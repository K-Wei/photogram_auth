<div class="page-header">
  <h3>My Likes</h3>
</div>


<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% @liked_photos.each do |photo| %>
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%= photo.user_id %>"> <%= photo.user.username %></a>
          <small>
            Created <%= time_ago_in_words(photo.created_at) %> ago
          </small>
        </h3>
      </div>

      <div class="panel-body">
        <a href="/photos/<%= photo.id %>">
          <img src="<%= photo.image %>" class="img-responsive">
        </a>
        <p>
        </p>
        <ul class="media-list">

          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/<%= photo.user_id %>"><%= photo.user.username %></a>
                <small>
                  Over <%= time_ago_in_words(photo.created_at) %> ago
                </small>
              </h6>
              <p> <%= photo.caption %></p>
            </div>
          </li>

          <% photo.comments.each do |comment| %>

          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/<%= photo.user_id %>"><%= comment.user.username %></a>
                <small>
                  Over <%= time_ago_in_words(comment.created_at) %> ago
                </small>
              </h6>
              <p> <%= comment.body %></p>
            </div>
          </li>
          <% end %>
        </ul>
      </div>

    </div>
    <% end %>
  </div>
</div>
