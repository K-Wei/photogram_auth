<div class="page-header">
  <h3><%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">

    <dt>Number of Photos</dt>
    <dd><%= @photos.length%></dd>

  </div>

</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <table class="table table-striped table-hover">
      <% @photos.each do |photo| %>
      <tr>
        <td>
          <a href="/photos/<%= photo.id %>"><%= photo.caption %></a>
        </td>
      </tr>
      <tr>
        <td>
          <a href="/photos/<%= photo.id %>"><img src="<%= photo.image %>"></a>
        </td>
      </tr>
      <% end %>
    </table>

    <dt>Number of Likes</dt>
    <dd><%= @likes.length %></dd>

    <dt>Number of Comments</dt>
    <dd><%= @comments.length %></dd>

  </div>
</div>
